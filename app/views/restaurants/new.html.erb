<h1 class="mt-3">Create a new restaurant</h1>

<div class="mt-3">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORIES %>
    <div class="btn btn-success mt-3">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
<div class="mt-3 btn btn-light">
  <%= link_to "Back to restaurants", restaurants_path %>
</div>
