<h1 class="mt-3">Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <p class="mt-3">Restaurant name: <%= restaurant.name %></p>
  <p>Restaurant address: <%= restaurant.address %></p>
  <p>Restaurant phone number: <%= restaurant.phone_number %></p>
  <p>Restaurant category: <%= restaurant.category %></p>
  <div class="btn btn-light text-decoration-none">
    <%= link_to "Show #{restaurant.name}", restaurant %>
  </div>
<% end %>
<br>
<div class="btn btn-light">
  <%= link_to "Create a new restaurant", new_restaurant_path %>
</div>
